# direnv configuration for gh-refme
# This adds the current directory to the PATH
# allowing you to run gh-refme from anywhere during development

# Export the current directory to PATH
export PATH=$PWD:$PATH

# Set up any needed environment variables for testing
# Uncomment and set as needed:
# export GITHUB_TOKEN=your_github_token_here

# Show information when the environment is loaded
echo "gh-refme development environment loaded"
echo "You can now run 'gh-refme' from any directory"
